[core]
    whitespace = nowarn
    pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /Users/e1081712/.gitignore_global
	autocrlf = input
	#autocrlf = input
[user]
	name = Nils Winkler
	email = nils@nilswinkler.com
	signingkey = 317C6E70C88A89B1
[github]
    user = nwinkler
[color]
    diff = auto
    status = auto
    branch = auto
[alias]
    p = !git checkout master && git pull origin master && git push origin master && git checkout -
    pp = !git checkout develop && git pull origin develop && git push origin develop && git checkout -
    co = checkout
    st = status
    ci = commit
    ca = commit -a
    br = branch
    ba = branch -a
    df = diff
    dfs = diff --cached
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    spull = !git checkout master && git-svn fetch && git-svn rebase && git checkout - && git rebase master
    spush = !git checkout master && git-svn dcommit && git checkout -
[difftool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge/Contents/MacOS/DiffMerge --nosplash \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/DiffMerge.app/Contents/MacOS/DiffMerge/Contents/MacOS/DiffMerge --merge --result=\"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
	trustExitCode = true
[http]
    postBuffer = 524288000
[http "https://bitbucket.fis.dev"]
	sslCert = "Winkler, Nils"
[credential]
	helper = osxkeychain
[push]
    default = simple
[diff "zip"]
    textconv = unzip -v
[url "https://"]
	insteadOf = git://
[rebase]
	autosquash = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	required = true
	process = git-lfs filter-process
[diff "scpt"]
  textconv = osadecompile
  binary = true

[rerere]
	enabled = true
	autoupdate = true
[commit]
	gpgsign = true
